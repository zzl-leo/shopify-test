{
  "name": "shopify-starter-theme",
  "version": "0.0.1",
  "description": "A Shopify starter theme using Theme Kit and Webpack",
  "private": true,
  "scripts": {
    "build": "webpack --mode=production",
    "deploy": "webpack --mode=production && theme deploy --dir=theme",
    "deploy:ca": "npm run get:ca && cross-env process.env.SHOPIFY_STORE=ca webpack --config webpack.config.ca.js --mode=production && npm run push:ca",
    "deploy:uk": "npm run get:uk && cross-env process.env.SHOPIFY_STORE=uk webpack --config webpack.config.uk.js --mode=production && npm run push:uk",
    "theme-check": "theme-check ./theme/",
    "watch:ca": "cross-env process.env.SHOPIFY_STORE=ca webpack --config webpack.config.ca.js --watch",
    "watch:uk": "cross-env process.env.SHOPIFY_STORE=uk webpack --config webpack.config.uk.js --watch",
    "watch:theme": "theme watch --notify=theme-ready.tmp --dir=theme",
    "prod:build": "webpack --env=analyze --mode=production",
    "prod:deploy": "webpack --mode=production && theme deploy --env=production --dir=theme --allow-live",
    "get:ca": "npm run clear && theme get --dir=theme --env=ca",
    "push:ca": "theme deploy --dir=theme --env=ca",
    "get:uk": "npm run clear && theme get --dir=theme --env=uk",
    "push:uk": "theme deploy --dir=theme --env=uk",
    "clear": "node build/clearDist.js",
    "zip": "node build/build-zip.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "browser-sync-webpack-plugin": "^2.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.2.6",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-svelte3": "^3.2.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss-loader": "^5.3.0",
    "read-yaml": "^1.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "svelte": "^3.37.0",
    "svelte-loader": "^3.1.1",
    "webpack": "^5.30.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@shopify/theme-a11y": "^4.1.1",
    "@shopify/theme-addresses": "^4.1.1",
    "@shopify/theme-cart": "^4.1.1",
    "@shopify/theme-currency": "^4.1.1",
    "@shopify/theme-images": "^4.1.1",
    "@shopify/theme-product": "^4.1.1",
    "@shopify/theme-product-form": "^4.1.1",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.10.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.5",
    "glob": "^8.0.3",
    "lazysizes": "^5.3.2",
    "postcss": "^8.3.6",
    "regenerator-runtime": "^0.13.7",
    "tailwindcss": "^2.1.1",
    "vue": "^3.2.39",
    "vue-loader": "^17.0.0",
    "vue-template-compiler": "^2.7.10"
  }
}
